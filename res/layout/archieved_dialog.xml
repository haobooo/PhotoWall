<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
     >
    
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="177dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/achievement_card_base"
        android:maxHeight="177dp"
        android:minHeight="177dp" >

        <!-- Content -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="114dp"
                android:layout_marginTop="20dp" >

                <ImageView
                    android:id="@+id/show_img"
                    android:layout_width="fill_parent"
                    android:layout_height="114dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/testimg" />

                <com.photowall.widget.typeface.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="SLEEP ON THE FLOOR"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    geekui:customTypeface="fonts/TrajanPro-Bold.ttf" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/archied_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/achived_icon" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/archied_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:singleLine="true"
                            android:text="100"
                            android:textColor="#FF999999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/archied_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/archied_number"
                            android:singleLine="true"
                            android:text="Archievements"
                            android:textColor="#FF999999"
                            android:textSize="6sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#FF999999" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/archied_img_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/challenging_icon" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/archied_number_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dip"
                            android:singleLine="true"
                            android:text="100"
                            android:textColor="#FF999999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/archied_intro_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/archied_number_2"
                            android:singleLine="true"
                            android:text="Challeging"
                            android:textColor="#FF999999"
                            android:textSize="6sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/quest_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quest_badge_small" />
    </FrameLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:orientation="vertical">
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="First archieved at 0:00 Jan 1."
            android:drawableLeft="@drawable/profile_time_icon"
            android:drawablePadding="4dp"/>
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:text="@string/archieved_count"/>
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#FFee5458"/>
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.5dp">
                <ImageView android:id="@+id/archieved_icon" 
                    android:layout_width="94.5dp"
                    android:layout_height="94.5dp"
                    android:src="@drawable/dummy_post_photo"/>
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.5dp"
                    android:layout_below="@+id/archieved_icon"
                    android:orientation="horizontal">
                    
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:text="100"
                        android:drawableLeft="@drawable/profile_like_icon"
                        android:drawablePadding="4dp"/>
                    
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:text="100"
                        android:drawableLeft="@drawable/profile_comment_icon"
                        android:drawablePadding="4dp"/>
                </LinearLayout>
                
            </RelativeLayout>
            
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.5dp">
                <ImageView android:id="@+id/archieved_icon" 
                    android:layout_width="94.5dp"
                    android:layout_height="94.5dp"
                    android:src="@drawable/dummy_post_photo"/>
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.5dp"
                    android:layout_below="@+id/archieved_icon"
                    android:orientation="horizontal">
                    
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:text="100"
                        android:drawableLeft="@drawable/profile_like_icon"
                        android:drawablePadding="4dp"/>
                    
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:text="100"
                        android:drawableLeft="@drawable/profile_comment_icon"
                        android:drawablePadding="4dp"/>
                </LinearLayout>
                
            </RelativeLayout>
            
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.5dp">
                <ImageView android:id="@+id/archieved_icon" 
                    android:layout_width="94.5dp"
                    android:layout_height="94.5dp"
                    android:src="@drawable/dummy_post_photo"/>
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.5dp"
                    android:layout_below="@+id/archieved_icon"
                    android:orientation="horizontal">
                    
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:text="100"
                        android:drawableLeft="@drawable/profile_like_icon"
                        android:drawablePadding="4dp"/>
                    
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:text="100"
                        android:drawableLeft="@drawable/profile_comment_icon"
                        android:drawablePadding="4dp"/>
                </LinearLayout>
                
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>