<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_background"
    android:orientation="vertical">
    
    <ImageView 
        android:id="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/landing_logo"
        android:layout_marginTop="80.5dp"
        />
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/landing_slogan"
        android:scaleType="fitXY"
        android:layout_marginTop="49dp"
        />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/landing_mask"
        android:orientation="vertical">
        
        <ImageView android:id="@+id/sign_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28.5dp"
            android:src="@drawable/btn_login_facebook_normal"
            />
        
        <ImageView android:id="@+id/sign_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:src="@drawable/btn_login_email_normal"
            />
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.5dp"
            android:layout_marginBottom="24.5dp"
            android:gravity="center_horizontal" >
            <TextView 
	            android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:text="@string/main_login_already_has_acc"
				android:textColor="@color/text_color_black"
				android:textSize="16sp" />

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="6dp"
                android:text="@string/main_login_here"
                android:textColor="@color/text_color_link"
                android:textSize="16sp" />
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

