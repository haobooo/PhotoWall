<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_bg_dialog"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_menu_13"
        />
       
    </LinearLayout>
    <ImageView
        android:id="@+id/achm_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dip"
        
        android:scaleType="fitCenter"
		android:layout_gravity="center"
    />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/achm_image"
        android:background="#dcdcdc"
        android:padding="3dip"
         >
        <ImageView 
            android:id="@+id/headimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dip"
            android:src="@drawable/default_avatar"
            />
        <LinearLayout
        	android:id="@+id/achm_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="15dip"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/headimage"
            android:paddingLeft="5dip"
            >
             <TextView
            android:id="@+id/achm_user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:gravity="left|top"
            android:textColor="#000000"
        />
        <TextView
            android:id="@+id/achm_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dip"
            android:text="Comment"
             android:textColor="#000000"
        />
        <TextView
            android:id="@+id/achm_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="5dip"
            android:paddingTop="15dip"
            android:text="xx ago"
            android:visibility="gone"
            />
        </LinearLayout>
        
        
        <LinearLayout
        	android:id="@+id/ht_post_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/achm_layout"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/postlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_07"
            />
            <TextView
                android:id="@+id/achm_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 likes"
                 android:textColor="#beb9b9"
            />
            <TextView
                android:id="@+id/achm_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:text="80 comments"
                 android:textColor="#beb9b9"
            />
        </LinearLayout>
        
    </RelativeLayout>
</RelativeLayout>
